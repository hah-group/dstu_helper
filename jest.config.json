{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "modulePaths": ["<rootDir>"],
  "rootDir": "./",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/apps/",
    "<rootDir>/libs/"
  ],
  "moduleNameMapper": {
    "^@dstu_helper/common(|/.*)$": "<rootDir>/libs/common/src/$1"
  }
}
